<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#FF7610" />
    <link rel="icon" type="image/png" href="/images/Visual.webp" />
    <title>My Profile | Zairza</title>
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/auth.css" />
  </head>
  <body>
    <section>
      <%- include('../partials/toast.ejs') %>
      <div class="container rounded-lg">
        <div class="user signinBx">
          <div class="formBx">
            <div class="form" id="profile_form">
              <div class="mt-12 flex flex-col items-center">
                <h1 class="text-2xl xl:text-3xl font-bold">My Profile</h1>
                <div class="w-full flex-1 mt-8">
                  <div class="mx-auto max-w-md">
                    <div class="relative">
                      <input
                        id="name"
                        class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:bg-white"
                        type="text"
                        <%
                        if
                        (user.name){
                        %>
                      placeholder="<%= user.name %>" 
                      value="<%= user.name %>" 
                      readonly
                      <% } else { %>
                      placeholder="Name"
                       <% } %> 
                      />
                      <div
                          class="absolute inset-y-0 right-0 flex items-center px-2"
                        >
                        <% myClass = (user.name)?'bxs-lock':'bxs-lock-open'; %>
                          <span
                            class="bg-gray-200 hover:bg-gray-300 rounded px-2 py-1 text-sm text-gray-600 font-mono cursor-pointer js-password-label"
                            onclick="toggleFieldVisibility($(this))"
                            ><i class="bx <%= myClass %>" style="color: #1471ff"></i
                          ></span>
                        </div>
                    </div>
                    <div class="relative">
                      <input
                        class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:bg-white"
                        type="email"
                        <%
                        if
                        (user.email){
                        %>
                      placeholder="<%= user.email %>" 
                      value="<%= user.email %>" 
                      readonly
                      <% } else { %>
                      placeholder="Registration number"
                       <% } %> 
                      />
                      <div
                        class="absolute inset-y-0 right-0 flex items-center px-2"
                      >
                      <% myClass = (user.email)?'bxs-lock':'bxs-lock-open'; %>
                        <span
                          class="bg-gray-200 hover:bg-gray-300 rounded px-2 py-1 text-sm text-gray-600 font-mono cursor-pointer js-password-label"
                          onclick="toggleFieldVisibility($(this))"
                          ><i class="bx <%= myClass %>" style="color: #1471ff"></i
                        ></span>
                      </div>
                    </div>
                    <small class="text-custom-blue primary_email ml-1"
                      >Primary Email which will be used to send
                      newsletter</small
                    >
                    <div class="relative">
                      <input
                        id="regno"
                        class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:bg-white"
                        type="text"
                        <%
                        if
                        (user.registration_no){
                        %>
                      placeholder="<%= user.registration_no %>" 
                      value="<%= user.registration_no %>" 
                      readonly
                      <% } else { %>
                      placeholder="Registration number"
                       <% } %> 
                      />
                      <div
                          class="absolute inset-y-0 right-0 flex items-center px-2"
                        >
                        <% myClass = (user.registration_no)?'bxs-lock':'bxs-lock-open'; %>
                          <span
                            class="bg-gray-200 hover:bg-gray-300 rounded px-2 py-1 text-sm text-gray-600 font-mono cursor-pointer js-password-label"
                            onclick="toggleFieldVisibility($(this))"
                            ><i class="bx <%= myClass %>" style="color: #1471ff"></i
                          ></span>
                        </div>
                    </div>
                    <div class="relative">
                      <select
                        autocomplete="off"
                        id="branch"
                        class="my-2 appearance-none w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:bg-white"
                      >
                      <option>Select Branch</option>
                      <% const branches = ["Computer Science & Engineering", "Information Technology","Electrical Engineering","Mechanical Engineering","Electronics & Intrumentation Engineering","Biotechnology","Civil Engineering","Textile Engineering","Fashion & Apparel Technology","Architecture","Computer Science & Application","Planning","Mathematics & Humanities","Physics","Chemistry"];
                        let selectedBranch;  
                      branches.forEach((branch) =>{
                        selectedBranch = (user.branch == branch )?'selected':'';
                        %>
                        <option value="<%= branch %>" <%= selectedBranch %>><%= branch %></option>

                      <% }) %>
                      </select>
                      <div
                        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
                      >
                        <svg
                          class="fill-current h-4 w-4"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                        >
                          <path
                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                          />
                        </svg>
                      </div>
                    </div>
                    <div class="relative">
                      <select
                      autocomplete="off"
                        id="wing"
                        class="my-2 appearance-none w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:bg-white"
                      >
                        <option>Select Wing</option>
                        <% const wings = ["Software","Hardware","Design"];
                        let selectedWing;  
                      wings.forEach((wing) =>{
                        selectedWing = (user.wing == wing )?'selected':'';
                        %>
                        <option value="<%= wing %>" <%= selectedWing %>><%= wing %></option>

                      <% }) %>
                      </select>
                      <div
                        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
                      >
                        <svg
                          class="fill-current h-4 w-4"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                        >
                          <path
                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                          />
                        </svg>
                      </div>
                    </div>
                    <div class="flex justify-between items-center my-2">
                      <label for="google_toggle" class="text-custom-orange flex items-center justify-between"><i class='bx bxl-google bx-md'></i></label>

                      <my-toggle-group class="flex items-center">
                        <my-toggle class="relative overflow-hidden inline-block">
                          <% checked = (google)?'checked':'' %>
                          <input type="checkbox" <%= checked %> class="m-0 relative cursor-pointer" name="toggle" id="google_toggle" onchange="ThirdPartyAuthenticate('Google',$(this).prop('checked'))" style="border: none;">
                        
                          <my-toggle-orb class="block pointer-events-none"></my-toggle-orb>
                        </my-toggle>
                      
                      </my-toggle-group>
                    </div>
                    <div class="flex justify-between items-center my-2">
                      <label for="github_toggle" class="text-custom-orange"><i class='bx bxl-github bx-md'></i></label>

                      <my-toggle-group class="flex items-center">
                        <my-toggle class="relative overflow-hidden inline-block">
                          <% checked = (github)?'checked':'' %>
                          <input type="checkbox" <%= checked %> class="m-0 relative cursor-pointer" name="toggle" id="github_toggle" onchange="ThirdPartyAuthenticate('Github',$(this).prop('checked'))" style="border: none;">
                        
                          <my-toggle-orb class="block pointer-events-none"></my-toggle-orb>
                        </my-toggle>
                      
                      </my-toggle-group>
                    </div>
                    <div class="flex justify-between items-center my-2">
                      <label for="newsletter_toggle" class="text-custom-orange"><i class='bx bx-news bx-md'></i></label>

                      <my-toggle-group class="flex items-center">
                        <my-toggle class="relative overflow-hidden inline-block">
                          <% newsletter_subscription = (user.newsletter_subscription.applied)?'checked':'' %>
                          <input type="checkbox" <%= newsletter_subscription %> class="m-0 relative cursor-pointer" name="toggle" id="newsletter_toggle" style="border: none;">
                        
                          <my-toggle-orb class="block pointer-events-none"></my-toggle-orb>
                        </my-toggle>
                      
                      </my-toggle-group>
                    </div>
                    <button
                      id="update-btn"
                      onclick="updateProfile()"
                      class="mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none"
                    >
                      <img
                        src="/images/auth/update.png"
                        id="update-icon"
                        alt=""
                      />
                      <span class="ml-3">Update Profile</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="imgBx">
            <img src="/images/auth/newPassword.png" alt="" />
          </div>
        </div>
      </div>
    </section>
  </body>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
    crossorigin="anonymous"
  ></script>
  <script src="/js/toast.js"></script>
  <script src="/js/profile.js"></script>
</html>
